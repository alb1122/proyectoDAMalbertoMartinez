<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.org.alb.ikaslast.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:background="#767876">

    <LinearLayout
        android:id="@+id/lay1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#767876"
        tools:ignore="Suspicious0dp">

        <TextView
            android:id="@+id/tvUsuarioTexto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Usuario:"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#fbfbfc"
            android:textSize="15dp"
            android:textIsSelectable="false" />
        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#fbfbfc"
            android:textSize="15dp"
            android:textIsSelectable="false" />
        <LinearLayout
            android:id="@+id/layEsp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#767876"
            android:orientation="horizontal"
            tools:ignore="Suspicious0dp">
            <TextView
                android:id="@+id/tvDatos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Alias "
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#f9f9fa"
                android:textSize="20dp"
                android:textIsSelectable="false" />
            <TextView
                android:id="@+id/tvDatos2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Grupo"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#f9f9fa"
                android:textSize="20dp"
                android:textIsSelectable="false" />
            </LinearLayout>


        <!-- <TextView
             android:id="@+id/log"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Log" />
         <ScrollView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/mScroll"
             android:hapticFeedbackEnabled="true"
             android:overScrollMode="always">
             <com.org.alb.ikaslast.logger.LogView
                 android:id="@+id/sample_logview"
                 android:text="LogView"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"


                 android:autoText="false" />
         </ScrollView>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#767876"
        android:orientation="vertical"
        tools:ignore="Suspicious0dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/img"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/run_animation"/>
        <TextView
            android:id="@+id/tvDistancia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="distancia"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#111112"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/borde">

       <!-- <TextView
            android:id="@+id/tvPasos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="pulse play"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#4986d1"
            android:textSize="10dp"
            android:textIsSelectable="false" />-->
        <TextView
            android:id="@+id/tvTiempo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="tiempo de actividad"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#fafafa"
            android:textSize="15dp"
            android:textIsSelectable="false" />
    </LinearLayout>
</LinearLayout>
